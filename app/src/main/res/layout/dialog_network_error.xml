<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:fillViewport="false"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    tools:context=".activities.CreateLan">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/tv_margin_20dp"
        android:text="@string/offline_message_title"
        android:textColor="@color/et_color"
        android:textSize="@dimen/tv_textSize_24sp" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/tv_margin_10dp"
        android:text="@string/offline_message_description"
        android:textColor="@color/et_color"
        android:textSize="@dimen/tv_textSize_18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ll_margin_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_retry"
            android:layout_width="@dimen/btn_width_130dp"
            android:layout_height="@dimen/btn_height_55dp"
            android:layout_marginEnd="@dimen/btn_margin_10dp"
            android:backgroundTint="@color/et_color"
            android:text="@string/retry_connection"
            android:textColor="@color/actionbar_color"
            android:textSize="@dimen/btn_textSize_16sp" />

        <Button
            android:id="@+id/btn_offline"
            android:layout_width="@dimen/btn_width_130dp"
            android:layout_height="@dimen/btn_height_55dp"
            android:layout_marginStart="@dimen/btn_margin_10dp"
            android:backgroundTint="@color/et_color"
            android:text="@string/offline"
            android:textColor="@color/actionbar_color"
            android:textSize="@dimen/btn_textSize_16sp" />
    </LinearLayout>
</LinearLayout>
